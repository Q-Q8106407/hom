<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="st.alr.homA"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="st.alr.homA.App"
        android:allowBackup="true"
        android:icon="@android:drawable/ic_menu_info_details"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name="st.alr.homA.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="st.alr.homA.RoomListActivity"
            android:label="@string/title_room_list" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="st.alr.homA.RoomDetailActivity"
            android:label="@string/title_room_detail"
            android:parentActivityName=".RoomListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".RoomListActivity" />
        </activity>
    </application>

</manifest>